{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build",
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": [],
      "label": "npm: build",
      "detail": "npx tsc"
    },
    {
      "type": "npm",
      "script": "watch",
      "group": "none",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "buildWatchers",
        "close": false
      },
      "problemMatcher": {
        "owner": "typescript",
        "applyTo": "closedDocuments",
        "fileLocation": ["absolute"],
        "pattern": {
          "regexp": "Error: ([^(]+)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\): (.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "beginsPattern": "Starting compilation in watch mode|File change detected\\. Starting incremental compilation",
          "endsPattern": "Found \\d+ errors?. Watching for file changes"
        }
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
