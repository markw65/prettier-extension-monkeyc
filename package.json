{
  "type": "commonjs",
  "publisher": "markw65",
  "name": "prettier-extension-monkeyc",
  "displayName": "Prettier-Extension-MonkeyC",
  "description": "A Monkey C extension for the Prettier extension",
  "version": "1.0.8",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:monkeyc"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "title": "Generate Optimized Project",
        "command": "prettiermonkeyc.optimizeCurrentProject",
        "category": "Prettier Monkey C"
      },
      {
        "title": "Generate api.mir tests (for development)",
        "command": "prettiermonkeyc.generateApiMirTests",
        "category": "Prettier Monkey C"
      }
    ],
    "configuration": {
      "title": "Prettier Monkey C",
      "type": "object",
      "properties": {
        "prettierMonkeyC.outputPath": {
          "type": "string",
          "description": "Path to where the optimized project should be generated.",
          "default": "optimized",
          "scope": "window"
        },
        "prettierMonkeyC.pathsToClone": {
          "type": "string",
          "description": "Semicolon separated globs specifying which source dirs should be copied.",
          "default": "source;source-*;resources;resources-*;monkey.jungle;manifest.xml",
          "scope": "window"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "vscode:uninstall": "node ./uninstall.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.66.0",
    "@vscode/test-electron": "^2.1.2",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@markw65/monkeyc-optimizer": "file:../monkeyc-optimizer",
    "@markw65/prettier-plugin-monkeyc": "^1.0.3"
  },
  "extensionDependencies": [
    "esbenp.prettier-vscode",
    "garmin.monkey-c"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/markw65/prettier-extension-monkeyc.git"
  },
  "homepage": "https://github.com/markw65/prettier-extension-monkeyc/blob/main/README.md"
}
